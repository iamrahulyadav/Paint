<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jetsetapp.paint.DogGallery">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog2"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog2"
                        android:tag="dog2" />

                    <ImageView
                        android:id="@+id/dog3"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog3"
                        android:tag="dog3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog4"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog4"
                        android:tag="dog4" />

                    <ImageView
                        android:id="@+id/dog6"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog6"
                        android:tag="dog6" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog8"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog8"
                        android:tag="dog8" />

                    <ImageView
                        android:id="@+id/dog10"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog10"
                        android:tag="dog10" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog11"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog11"
                        android:tag="dog11" />

                    <ImageView
                        android:id="@+id/dog13"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog13"
                        android:tag="dog13" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog14"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog14"
                        android:tag="dog14" />

                    <ImageView
                        android:id="@+id/dog16"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog16"
                        android:tag="dog16" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog18"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog18"
                        android:tag="dog18" />

                    <ImageView
                        android:id="@+id/dog19"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog18"
                        android:tag="dog19" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog20"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog18"
                        android:tag="dog18" />

                    <ImageView
                        android:id="@+id/dog21"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog18"
                        android:tag="dog18" />

                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dogs"
            style="@style/colorButton"
            android:layout_gravity="left"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/dog1" />

        <ImageView
            android:id="@+id/cats"
            style="@style/colorButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/dog4" />

        <ImageView
            android:id="@+id/other"
            style="@style/colorButton"
            android:layout_gravity="right"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/dog13" />

    </RadioGroup>


</RelativeLayout>
